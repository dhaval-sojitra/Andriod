<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".updateroute">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Route Mast"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:gravity="center_horizontal"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/edturrid"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/edittext"
            android:ems="12"
            android:enabled="false"
            android:hint="Route ID"
            android:includeFontPadding="true"
            android:inputType="number"
            android:paddingLeft="6dp"
            android:textColor="#000000"
            android:textColorHint="#000000" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/edittext"
            android:textColor="#000000"
            android:hint="Bus ID"
            android:layout_marginTop="10dp"
            android:inputType="number"
            android:textColorHint="#000000"
            android:ems="12"
            android:id="@+id/edturbid"
            android:includeFontPadding="true"
            android:paddingLeft="6dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:background="@drawable/edittext"
            android:hint="From"
            android:textColorHint="#000000"
            android:layout_marginTop="10dp"
            android:ems="12"
            android:id="@+id/edturfrom"
            android:includeFontPadding="true"
            android:paddingLeft="6dp"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:background="@drawable/edittext"
            android:hint="To"
            android:textColorHint="#000000"
            android:layout_marginTop="10dp"
            android:ems="12"
            android:id="@+id/edturto"
            android:includeFontPadding="true"
            android:paddingLeft="6dp"
            />

        <EditText
            android:id="@+id/edturdate"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:cursorVisible="false"
            android:background="@drawable/edittext"
            android:drawableLeft="@drawable/ic_baseline_date_range_24"
            android:ems="12"
            android:hint="Date"
            android:includeFontPadding="true"
            android:inputType="date"
            android:paddingLeft="6dp"
            android:textColor="#000000"
            android:textColorHint="#000000" />

        <EditText
            android:id="@+id/edturtime"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext"
            android:cursorVisible="false"
            android:drawableLeft="@drawable/ic_baseline_access_time_filled_24"
            android:ems="12"
            android:hint="Time"
            android:includeFontPadding="true"
            android:inputType="time"
            android:paddingLeft="6dp"
            android:textColor="#000000"
            android:textColorHint="#000000" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:background="@drawable/edittext"
            android:hint="Price"
            android:textColorHint="#000000"
            android:layout_marginTop="10dp"
            android:ems="12"
            android:inputType="number"
            android:id="@+id/edturprice"
            android:includeFontPadding="true"
            android:paddingLeft="6dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_gravity="center">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Update"
                android:textColor="#FFFCFC"
                android:id="@+id/btnurupdate"/>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>