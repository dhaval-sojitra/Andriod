<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/loginback"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registration"
        android:textSize="50sp"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:gravity="center_horizontal"
        android:layout_marginBottom="40dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/edittext"
            android:textColor="#000000"
            android:hint="Full Name"
            android:textColorHint="#000000"
            android:ems="12"
            android:id="@+id/edtrname"
            android:includeFontPadding="true"
            android:paddingLeft="6dp"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:background="@drawable/edittext"
            android:hint="User Type(Admin/Client)"
            android:inputType=""
            android:textColorHint="#000000"
            android:layout_marginTop="10dp"
            android:ems="12"
            android:id="@+id/edtrusertype"
            android:includeFontPadding="true"
            android:paddingLeft="6dp"
            />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/edittext"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:hint="User Name"
            android:textColorHint="#000000"
            android:ems="12"
            android:id="@+id/edtrusername"
            android:includeFontPadding="true"
            android:paddingLeft="6dp"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:background="@drawable/edittext"
            android:hint="Phone"
            android:inputType="phone"
            android:textColorHint="#000000"
            android:layout_marginTop="10dp"
            android:ems="12"
            android:maxLength="10"
            android:id="@+id/edtrphone"
            android:includeFontPadding="true"
            android:paddingLeft="6dp"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:background="@drawable/edittext"
            android:hint="Password"
            android:textColorHint="#000000"
            android:layout_marginTop="10dp"
            android:ems="12"
            android:id="@+id/edtrpassword"
            android:includeFontPadding="true"
            android:paddingLeft="6dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_gravity="center">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textColor="#FFFCFC"
            android:id="@+id/btnrregester"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="100dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:textColor="#FDFCFC"
            android:text="Cancle"
            android:id="@+id/btnrcancle"/>
    </LinearLayout>

</LinearLayout>